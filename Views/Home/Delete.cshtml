@model ImageGallery.Models.ImageModel

<h2>Are you sure you want to delete this image?</h2>

<div>
    <h3>@Model.Title</h3>
    <img src="@Model.Url" alt="@Model.Title" style="width: 200px;" />
    <p>@Model.Description</p>
</div>

<form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
