@model List<ImageGallery.Models.ImageModel>

<h1>Image Gallery</h1>
<a href="/Home/Create">Create New Image</a>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Image</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var image in Model)
        {
            <tr>
                <td>@image.Title</td>
                <td><img src="@image.Url" alt="@image.Title" style="width: 100px; height: auto;" /></td>
                <td>@image.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@image.Id">Edit</a> |
                    <form asp-action="Delete" asp-route-id="@image.Id" method="post" style="display:inline;" onsubmit="return confirmDelete();">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this image?");
    }
</script>
